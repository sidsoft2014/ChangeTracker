<UserControl x:Class="ChangeTracker.TextInputPopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChangeTracker"
             mc:Ignorable="d" 
             d:DesignHeight="175" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Enter a name..." TextAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBox Height="24" Margin="2" Text="New" VerticalContentAlignment="Center"/>
            <Button Content="OK" Width="64" Margin="2" />
        </StackPanel>
        <TextBlock Name="txtStaus" Grid.Row="2" TextAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
</Grid>
</UserControl>
